</head>
<body>

		@await Html.PartialAsync("headerCustomer")
	
	<!-- </div> -->
	<!-- //Search -->
	<!-- tour packages -->
	<section class="packages pt-5">
		<div class="container py-lg-4 py-sm-3 col-md-9">
			<h2 class="heading text-capitalize text-center"> Discover our tour packages</h2>
			<p class="text mt-2 mb-5 text-center">Vestibulum tellus neque, sodales vel mauris at, rhoncus finibus augue. Vestibulum urna ligula, molestie at ante ut, finibus vulputate felis.</p>
			<div class="row">

				<section class="product-details spad">
					<div class="container">
						<div class="row">
							<div class="col-lg-6 col-md-6">
								<div class="product__details__pic">
									<div class="product__details__pic__item">
										<img class="product__details__pic__item--large"
											 src="@Url.Content("~/Media/ImagesTour/"+Model.AnhTour +".jpg")" alt="">
									</div>
								</div>
							</div>
							<div class="col-lg-5 col-md-5" style="float: right;">
								<div class="product__details__text">
									<h3>@Model.TenTour</h3>
									<div class="product__details__rating">
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star-half-o"></i>
										<span>(18 reviews)</span>
									</div>
									<div class="product__details__price"> @Model.Gia</div>
									<p>@Model.ChiTietLt</p>
									<div class="product__details__quantity">
										<div class="quantity">
											<div class="pro-qty">
												
											</div>
										</div>
									</div>
									<a href="#" class="heart-icon"><span class="icon_heart_alt"></span></a>
									<ul>
										<li><b>Nơi khởi hành </b> <span>@Model.NoiKhoiHanh</span></li>
										<li><b>From:</b> <span>@Model.NgayBd</span></li>
										<li><b>To:</b> <span>@Model.NgayKt</span></li>
										<li>

											<div class="share">
												<a href="#"><i class="fa fa-facebook"></i></a>
												<a href="#"><i class="fa fa-twitter"></i></a>
												<a href="#"><i class="fa fa-instagram"></i></a>
												<a href="#"><i class="fa fa-pinterest"></i></a>
											</div>
										</li>
										<li>
											<a asp-controller="HomeCustomer" asp-action="Booking" asp-route-tourId="@ViewBag.sanpham.MaTour" asp-route-tourName="@ViewBag.sanpham.TenTour" asp-route-tourImage="@ViewData["TourImage"]"><button class="btn btn-primary">Book Now</button></a>


										</li>
									</ul>
								</div>
							</div>
							<div class="col-lg-12">
								<div class="product__details__tab">
									<ul class="nav nav-tabs" role="tablist">
										<li class="nav-item">
											<a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab"
											   aria-selected="true">Description</a>
										</li>
										<li class="nav-item">
											<a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab"
											   aria-selected="false">Information</a>
										</li>
										<li class="nav-item">
											<a class="nav-link" data-toggle="tab" href="#tabs-3" role="tab"
											   aria-selected="false">Reviews <span>(1)</span></a>
										</li>
									</ul>
									<div class="tab-content">
										<div class="tab-pane active" id="tabs-1" role="tabpanel">
											<div class="product__details__tab__desc">
												<h6>Products Infomation</h6>
												<p>@Model.TenTour</p>
											</div>
										</div>
										<div class="tab-pane" id="tabs-2" role="tabpanel">
											<div class="product__details__tab__desc">
												<h6>Products Infomation</h6>
												<p>@Model.ChiTietLt</p>
												<p>@Model.ChiTietLt</p>
											</div>
										</div>
										<div class="tab-pane" id="tabs-3" role="tabpanel">
											<div class="product__details__tab__desc">
												<h6>Products Infomation</h6>
												<p>@Model.ChiTietLt</p>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</section>



			</div>
		</div>
	</section>
	<!-- tour packages -->
	@await Html.PartialAsync("footerCustomer")
	</body>
	</html>








