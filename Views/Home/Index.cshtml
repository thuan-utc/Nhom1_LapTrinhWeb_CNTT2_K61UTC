@{
	ViewData["Title"] = "Home Page";
	Layout = "~/Views/Shared/_LayoutHomePage.cshtml";
}
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<Tour>
@foreach (var item in Model)
{
	<div class="col-lg-3 col-sm-6">
		<div class="image-tour position-relative">
			<img src="@Url.Content("../Media/ImagesTour/" +item.AnhTour + ".jpg")" alt="" class="img-fluid" />
			<p><span class="fa fa-tags"></span> <span>@item.Gia</span></p>
		</div>
		<div class="package-info">
			<h6 class="mt-1"><span class="fa fa-map-marker mr-2"></span>@item.DiaDiem</h6>
			<h5 class="my-2"><a asp-controller="Home" asp-action="TourDetail" asp-route-matour="@item.MaTour">@item.TenTour</a></h5>.
			<p class="">@item.NoiKhoiHanh</p>
			<ul class="listing mt-3">
				<li><span class="fa fa-clock-o mr-2"></span>From: <span>@item.NgayBd</span></li>
				<li><span class="fa fa-clock-o mr-2"></span>To: <span>@item.NgayKt</span></li>
			</ul>
		</div>
	</div>
}

