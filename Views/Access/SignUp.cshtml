@{
	Layout = null;
}
@model TaiKhoan
<!doctype html>
<html lang="en">
<head>
	<title>Login 10</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/../Template/Template Login_New/../Template/Template Login_New/css/font-awesome.min.css">

	<link rel="stylesheet" href="../Template/Template Login_New/css/styleLoginNew.css">

</head>
<body class="img js-fullheight" style="background-image: url(../Template/Template Login_New/images/bg.jpg);">
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Sign Up</h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-4">
					<div class="login-wrap p-0">
						<h3 class="mb-4 text-center">You don't have an account?</h3>
						@using (Html.BeginForm("SignUp", "Access", FormMethod.Post))
						{
							@* <form>*@
							<div class="form-group">
								@Html.TextBoxFor(x=>x.Taikhoan1, new{@class = "form-control",placeholder="Username", required="required", autofocus="autofocus"})
							</div>
							<div class="form-group">
								@Html.TextBoxFor(x => x.Email,
							new { @class = "form-control",placeholder="Email", required = "required" })
							</div>
							<div class="form-group">
								@Html.TextBoxFor(x=>x.Matkhau, new {@class="form-control form-control-lg", type="password", placeholder="password"})
								<span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
							</div>
							<div class="form-group">
								@Html.TextBoxFor(x => x.Loai,
							new { @class = "form-control",placeholder="Loai", required = "required" })
							</div>
							<div class="form-group">
								<button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
							</div>
							<div class="form-group d-md-flex">
								<div class="w-100">
									<a href="#" style="color: #fff">Have an account?</a>
								</div>
								<!-- <div class="w-50 text-md-right">
									<a href="#" style="color: #fff">Forgot Password</a>
								</div> -->
							</div>
							@*  </form>*@
							<a asp-controller="Access" asp-action="SignUp" class="button sign-up-button">Quay lại </a>
						}
						<!-- <p class="w-100 text-center">&mdash; Or Sign In With &mdash;</p>
						<div class="social d-flex text-center">
						  <a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
						  <a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Twitter</a>
						</div> -->
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="../Template/Template Login_New/js/jquery.min.js"></script>
	<script src="../Template/Template Login_New/js/popper.js"></script>
	<script src="../Template/Template Login_New/js/bootstrap.min.js"></script>
	<script src="../Template/Template Login_New/js/main.js"></script>

</body>
</html>

